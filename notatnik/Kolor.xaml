<Window x:Class="notatnik.Kolor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notatnik"
        mc:Ignorable="d"
        Title="Wybierz Kolor" Height="400" Width="600">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" FontSize="36">R</TextBlock>
        <TextBox x:Name="Label_R" Grid.Column="1" Grid.Row="0"></TextBox>
        <TextBlock Grid.Column="0" Grid.Row="1" FontSize="36">G</TextBlock>
        <TextBox x:Name="Label_G" Grid.Column="1" Grid.Row="1"></TextBox>
        <TextBlock Grid.Column="0" Grid.Row="2" FontSize="36">B</TextBlock>
        <TextBox x:Name="Label_B" Grid.Column="1" Grid.Row="2"></TextBox>
        <Button Click="Button_Click" Grid.ColumnSpan="2" Grid.Row="3" Margin="20">Zatwierdz</Button>

    </Grid>
    
</Window>
